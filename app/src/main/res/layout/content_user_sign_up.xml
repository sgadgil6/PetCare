<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sgadg.petcare.UserSignUp"
    tools:showIn="@layout/activity_user_sign_up">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/host_profPic"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:id="@+id/user_welcome"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/user_address"
        android:layout_below="@+id/user_welcome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:hint="Enter Your Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/user_city"
        android:layout_alignBottom="@+id/host_profPic"
        android:layout_alignParentStart="true"
        android:hint="Enter Your City" />

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/host_profPic"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:text="Dog(s)"
        android:layout_marginTop="68dp"
        android:id="@+id/user_dogs"
        tools:text="Dog(s)"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_below="@+id/host_bio"
        android:layout_alignStart="@+id/user_welcome"
        android:layout_height="40dp"
        android:layout_width="75dp"
        android:gravity="center"/>

    <EditText
        android:layout_width="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/num_dogs"
        android:layout_marginStart="24dp"
        android:text="0"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/user_dogs"
        android:layout_toEndOf="@+id/user_dogs" />

    <TextView
        android:text="Cat(s)"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/user_cats"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center"
        android:layout_below="@+id/user_dogs"
        android:layout_alignStart="@+id/user_dogs" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/num_Cats"
        android:text="0"
        android:layout_alignBaseline="@+id/user_cats"
        android:layout_alignBottom="@+id/user_cats"
        android:layout_alignStart="@+id/num_dogs" />

    <EditText
        android:layout_width="50dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/num_horses"
        android:text="0"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/user_horse"
        android:layout_alignBottom="@+id/user_horse"
        android:layout_alignStart="@+id/num_Cats" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine|textLongMessage"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/host_bio"
        android:hint="Tell us a bit about yourself..."
        android:layout_below="@+id/user_city"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Horse(s)"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:id="@+id/user_horse"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:gravity="center"
        android:layout_below="@+id/user_cats"
        android:layout_alignEnd="@+id/user_welcome"
        android:layout_marginTop="13dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_submit"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.Button"
        android:layout_below="@+id/user_horse"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
